         <div id="products" class="modal">
          <div class="modal-content">
           <h1 class="center orange-text">Add New Product</h1>
        <form class="col s12" action="/product/new" method="POST" enctype="multipart/form-data">
        <div class="row">
              <div class="row">
                <div class="input-field col s6">
                  <i class="material-icons prefix orange-text">account_circle</i>
                  <input id="icon_prefix" type="text" class="validate" name="title">
                  <label for="icon_prefix"  class="orange-text"> Name</label>
                </div>
                 <div class="file-field input-field col s6 ">
                    <div class="btn orange">
                        <span>Product Icon</span>
                        <input type="file" name="profile">
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text">
                    </div>
                </div>
              </div>
        </div>
        <div class="row">
             
                <div class="input-field col s4">
                  <i class="material-icons prefix orange-text">account_circle</i>
                  <input id="icon_prefix2" type="text" class="validate" name="desc">
                  <label for="icon_prefix2"  class="orange-text"> Description</label>
                </div>
                <div class="input-field col s4">
                  <i class="material-icons prefix orange-text">account_circle</i>
                  <input id="icon_prefix3" type="number" class="validate" name="price">
                  <label for="icon_prefix3"  class="orange-text">Price</label>
                </div>
                <div class="input-field col s4">
                  <i class="material-icons prefix orange-text">account_circle</i>
                  <input id="icon_prefix3" type="number" class="validate" name="qty">
                  <label for="icon_prefix3"  class="orange-text">Qty</label>
                </div>
         </div>
         <div class="input-field center">
             <button class="btn waves-effect waves-light center orange pulse" type="submit" name="action">Submit
                <i class="material-icons right">touch_app</i>
              </button>
         </div>
        </form>
          </div>
        </div>
